# Enable URL rewriting
RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect root URL to form.html
RewriteRule ^$ form.html [L]

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Enable Gzip compression for various file types
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/xml
</IfModule>

# Set browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"  # Default cache time
    ExpiresByType image/x-icon "access plus 1 year"  # Favicon
    ExpiresByType image/jpg "access plus 1 year"  # JPEG images
    ExpiresByType image/png "access plus 1 year"  # PNG images
    ExpiresByType image/gif "access plus 1 year"  # GIF images
    ExpiresByType text/css "access plus 1 month"  # CSS files
    ExpiresByType application/javascript "access plus 1 month"  # JS files
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set Content-Security-Policy "default-src 'self';"  # Update as needed
</IfModule>

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow access to .well-known directory (for SSL)
<Directory "/.well-known">
    Allow from all
</Directory>

# Clean URLs for HTML files
RewriteRule ^form$ form.html [L]
RewriteRule ^home$ dashboard.html [L]
RewriteRule ^checkout$ checkout.html [L]
RewriteRule ^cards$ cards.html [L]